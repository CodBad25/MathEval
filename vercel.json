{
  "rewrites": [
    {
      "source": "/api/mathalea/:uuid",
      "destination": "/api/mathalea.py"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate, max-age=0"
        },
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        },
        {
          "key": "Content-Security-Policy",
          "value": "frame-src 'self' https://coopmaths.fr http://localhost:5173; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://coopmaths.fr; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net;"
        }
      ]
    }
  ]
}
